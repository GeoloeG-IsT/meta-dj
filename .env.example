# Copy this file to .env and customize for your local environment.
# Do NOT commit your .env file.

# --- Postgres ---
POSTGRES_USER=meta
POSTGRES_PASSWORD=meta
POSTGRES_DB=meta_dj

# --- MinIO (S3-compatible object storage) ---
MINIO_ROOT_USER=meta
MINIO_ROOT_PASSWORD=meta12345

# --- API service env ---
DATABASE_URL=postgres://meta:meta@db:5432/meta_dj?sslmode=disable
STORAGE_ENDPOINT=http://minio:9000
STORAGE_BUCKET=meta-dj
STORAGE_ACCESS_KEY_ID=meta
STORAGE_SECRET_ACCESS_KEY=meta12345
# Set JWT_SECRET to enable Bearer JWT validation (dev: use a short random string)
# JWT_SECRET=

# --- Web app env ---
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# --- Core CLI (local SQLite) ---
# Path to local SQLite database file (used by core CLI)
# DJ_DB_PATH=./meta_dj.local.sqlite
# Stable device ID for change journal entries
# DJ_DEVICE_ID=local-device
# Analyzer mode: auto | rust | js
# DJ_ANALYZER=auto

# --- Sync CLI defaults ---
# SYNC_API_BASE=http://localhost:8080
# SYNC_SINCE=1970-01-01T00:00:00Z


